{% extends "layouts/main.html" %}

{% block pageTitle %}
  What is the vet's name? – {{ serviceName }} – Prototype
{% endblock %}

{% block header %}
  <!-- Blank header with no service name for the start page -->
{{ govukHeader({
  homepageUrl: "#",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "#"
}) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

       <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" aria-describedby="sample-date-hint">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
              What is the vet's name?
            </h1>
          </legend>
          <div id="sample-date-hint" class="govuk-hint">
            Enter the vet's personal name, not their business name. You can find this on the summary the vet gave you.
          </div>
          <div class="govuk-form-group">
            {# <label class="govuk-label" for="event-name">
              Enter a number
            </label> #}
            <input class="govuk-input govuk-input--width-30" id="event-name" name="eventName" type="text">
          </div>
        </fieldset>
      </div>

        {{ govukButton({
        text: "Continue",
        href: "vets-rcvs",
        isStartButton: false
        }) }}


    </div>

  </div>

{% endblock %}
