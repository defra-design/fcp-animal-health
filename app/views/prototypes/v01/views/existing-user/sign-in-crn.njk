{% extends "layouts/main.html" %}

{% block pageTitle %}
  Start page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block header %}
  <!-- Blank header with no service name for the start page -->
{{ govukHeader({
  homepageUrl: "#",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "#"
}) }}
{% endblock %}

{% block beforeContent %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

{{ govukBackLink({
  text: "Back",
  href: "agreement-start"
}) }}

{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

       <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" aria-describedby="sample-date-hint">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
              Sign in to get funding to improve animal health and welfare
            </h1>
          </legend>
          <div class="govuk-form-group">
            <label class="govuk-label" for="authentication-code">
              Customer reference number (CRN)
            </label>
            <div id="authentication-code-hint" class="govuk-hint">
              This is the 10-digit number emailed to you when you registered with the Rural Payments service.
            </div>
            <input class="govuk-input govuk-input govuk-input--extra-letter-spacing" id="authentication-code" name="authenticationCode" type="text" spellcheck="false" aria-describedby="authentication-code-hint">
          </div>
          <div class="govuk-form-group">
            <label class="govuk-label" for="authentication-code">
              Password
            </label>
            <div id="authentication-code-hint" class="govuk-hint">
              This is your Rural Payments service password.
            </div>
            <input class="govuk-input govuk-input govuk-input--extra-letter-spacing" id="authentication-code" name="authenticationCode" type="text" spellcheck="false" aria-describedby="authentication-code-hint">
          </div>
            

        </fieldset>
      </div>

        {{ govukButton({
        text: "Sign in",
        href: "you-can-claim-multiple",
        isStartButton: false
        }) }}


    </div>

  </div>

{% endblock %}
