{% extends "layouts/main-logged-agreement.html" %}

{% block pageTitle %}
  Start page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-l">
        Timing of poultry biosecurity reviews
      </h1>

      <p class="govuk-body">
        Claim your poultry biosecurity review as part of Get funding to improve animal health and welfare.
      </p>

      <hr class="govuk-section-break govuk-section-break--m govuk-section-break">

      {% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

      {{ govukWarningText({
        text: "To be eligible to claim, you need to have an poultry biosecurity review agreement in place and follow these timing rules.",
        iconFallbackText: "Warning"
      }) }}

      <hr class="govuk-section-break govuk-section-break--m govuk-section-break">

      <h2 class="govuk-heading-m">
        Poultry biosecurity reviews
      </h2>
      <p class="govuk-body">To be eligible to claim for a poultry biosecurity review you must:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>have an poultry biosecurity review agreement in place before you do your first biosecurity review</li>
        <li>have no more than 3 biosecurity assessment on any number units by 31 March 2029</li>
      </ul>

      <hr class="govuk-section-break govuk-section-break--l govuk-section-break">

      {% from "govuk/components/button/macro.njk" import govukButton %}

      <div class="govuk-button-group">
        {{ govukButton({
          text: "I agree",
          href: "agreement-review-offer"
        }) }}

        {{ govukButton({
          text: "I do not agree",
          href: "#",
          classes: "govuk-button--secondary"
        }) }}
      </div>


    </div>

  </div>

{% endblock %}
