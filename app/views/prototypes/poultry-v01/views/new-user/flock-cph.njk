{% extends "layouts/main-logged.html" %}

{% block pageTitle %}
  What is the vet's RCVS number? – {{ serviceName }} – Prototype
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% from "govuk/components/input/macro.njk" import govukInput %}

      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" aria-describedby="vets-rcvs-hint">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
              Enter the County Parish Holding (CPH) number for this flock
            </h1>
          </legend>
          <div id="vets-rcvs-hint" class="govuk-hint">
            Tell us the CPH for where this flock is kept.
          </div>
          {{ govukInput({
            id: "vets-rcvs",
            name: "vets-rcvs",
            classes: "govuk-input--width-10",
            type: "text",
            label: {
              text: "CPH number for this flock",
              classes: "govuk-label--s",
              isPageHeading: true
            },
            hint: {
              text: "CPH format should be nn/nnn/nnnn"
            }
          }) }}
        </fieldset>
      </div>


      {{ govukButton({
      text: "Continue",
      href: "flock-sbi",
      isStartButton: false
      }) }}


    </div>

  </div>

{% endblock %}
