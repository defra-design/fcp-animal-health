{% extends "layouts/main-logged-agreement.html" %}

{% block pageTitle %}
  Start page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block beforeContent %}
  {{ super() }}
  {% from "govuk/components/back-link/macro.njk" import govukBackLink %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

       <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" aria-describedby="sample-date-hint">
          <h1 class="govuk-heading-l">
            What you can claim for as part of this agreement
          </h1>
          {# <p class="govuk-body">Under this agreement, you can claim funding for the following species:</p>
            <ul class="govuk-list govuk-list--bullet">
              <li>beef cattle</li>
              <li>dairy cattle</li>
              <li>pigs</li>
              <li>sheep</li>
            </ul> #}
          <p class="govuk-body">
            Under this agreement, you can claim funding for any number of poultry flocks.
          </p>

          <p class="govuk-body">
            You can do a maximum of 3 biosecurity reviews on any number of flocks by 31 March 2029.
          </p>

          <p class="govuk-body">
            You need to make a separate claim for each flock.
          </p>
        </fieldset>


      </div>


      {% from "govuk/components/button/macro.njk" import govukButton %}

      <div class="govuk-button-group">
        {{ govukButton({
          text: "I agree",
          href: "agreement-minimum-number"
        }) }}

        {{ govukButton({
          text: "I do not agree",
          href: "#",
          classes: "govuk-button--secondary"
        }) }}
         {# - reject agreement #}
      </div>


    </div>

  </div>

{% endblock %}
