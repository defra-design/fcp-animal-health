    {{ govukHeader({
      homepageUrl: "holding-page",
      serviceName: "Get funding to improve animal health and welfare",
      serviceUrl: "#"
    }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {{ govukPanel({
        titleText: "Claim complete",
