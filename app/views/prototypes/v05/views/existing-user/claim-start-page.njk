{% extends "layouts/main-logged.html" %}

{% block pageTitle %}
  Claim funding to improve animal health and welfare – {{ serviceName }} – Prototype  
{% endblock %}

{% block header %}
  <!-- Blank header with no service name for the start page -->
{{ govukHeader({
  homepageUrl: "holding-page",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "#"
}) }}
{% endblock %}

{% block beforeContent %}
<div class="govuk-phase-banner">
  <p class="govuk-phase-banner__content">
    <strong class="govuk-tag govuk-phase-banner__content__tag">
      beta
    </strong>
    <span class="govuk-phase-banner__text">
      This is a new service. Your <a class="govuk-link" href="#">feedback</a> will help us to improve it.
    </span>
  </p>
</div>
{% endblock %}

{% block content %}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      <h1 class="govuk-heading-xl">
        Claim funding to improve animal health and welfare
      </h1>

      <!-- Overview -->

      <p class="govuk-body">
        Use this service to claim funding for a vet to visit your farm to:
      </p>

      <ul class="govuk-list govuk-list--bullet">
        <li>improve the health and welfare of your livestock</li>
        <li>help reduce diseases</li>
      </ul>

      <p class="govuk-body">
        If you're eligible, you can claim funding for:
      </p>

      <ul class="govuk-list govuk-list--bullet">
        <li><a href="#" class="govuk-link">animal health and welfare reviews</a></li>
        <li><a href="#" class="govuk-link">endemic disease follow-ups</a></li>
      </ul>

      <!-- Start Now Button -->

      <a href="sign-in-crn-claim" role="button" draggable="false" class="govuk-button govuk-button--start" data-module="govuk-button">
        Start now
        <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
          <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z" />
        </svg>
      </a>

      <!-- Before you start -->

      <h2 id="before-you-start" class="govuk-heading-m">
        Before you start
      </h2>

      <p class="govuk-body">
        You'll need:
      </p>

      <ul class="govuk-list govuk-list--bullet">
        <li>your Rural Payments service customer reference number (CRN) and password</li>
        <li>the summary the vet gave you</li>
      </ul>

      <p>
        You need to have completed a <a href="#" class="govuk-link">biosecurity assessment</a> if you are claiming for a follow-up for:
      </p>
      <ul class="govuk-list govuk-list--bullet govuk-list--nested">
        <li>beef cattle</li>
        <li>pigs</li>
      </ul>
    
      

      <!-- Get help with your claim -->

      <h2 id="get-help-with-your-claim" class="govuk-heading-m">
        Get help with your claim
      </h2>

      <p class="govuk-body">
        If you cannot claim online or have a question about your claim, contact the Rural Payments Agency and give your agreement number.
      </p>

      <p class="govuk-body">Email: <a href="#">ruralpayments@defra.gov.uk</a></p>

      <ul class="govuk-list govuk-list">
          <li>Telephone: 03000 200 301</li>
          <li>Monday to Friday, 8:30am to 5pm, except bank holidays</li>
      </ul>

      <p class="govuk-body"><a href="https://www.gov.uk/call-charges">Find out about call charges (opens in a new tab)</a></p>


        
    </div>
</div>

{% endblock %}