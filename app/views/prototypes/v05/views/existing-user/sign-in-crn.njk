{% extends "layouts/main-logged.html" %}

{% block pageTitle %}
  Sign in {{ serviceName }} Prototype
{% endblock %}

{% block header %}
  <!-- Header for v1 -->
{{ govukHeader({
  homepageUrl: "holding-page",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "../index-research"
}) }}
{% endblock %}

{% block beforeContent %}

{% from "govuk/components/back-link/macro.njk" import govukBackLink %}

  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}

{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

       <div class="govuk-form-group">
        <fieldset class="govuk-fieldset" aria-describedby="sample-date-hint">
          <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
            <h1 class="govuk-fieldset__heading">
              Sign in to get funding to improve animal health and welfare
            </h1>
          </legend>
          <div class="govuk-form-group">
            <label class="govuk-label" for="authentication-code">
              Customer reference number (CRN)
            </label>
            <div id="authentication-code-hint" class="govuk-hint">
              This is the 10-digit number emailed to you when you registered with the Rural Payments service.
            </div>
            <input class="govuk-input govuk-input govuk-input--extra-letter-spacing" id="authentication-code" name="authenticationCode" type="text" spellcheck="false" aria-describedby="authentication-code-hint">
          </div>
          <div class="govuk-form-group">
            <label class="govuk-label" for="authentication-code">
              Password
            </label>
            <div id="authentication-code-hint" class="govuk-hint">
              This is your Rural Payments service password.
            </div>
            <input class="govuk-input govuk-input govuk-input--extra-letter-spacing" id="authentication-code" name="authenticationCode" type="text" spellcheck="false" aria-describedby="authentication-code-hint">
          </div>
            

        </fieldset>
      </div>

        {{ govukButton({
        text: "Sign in",
        href: "sign-in-choose-business",
        isStartButton: false
        }) }}

      <p>
        <a href="#">I have forgotten my password</a>
      </p>

      {% from "govuk/components/details/macro.njk" import govukDetails %}

      <details class="govuk-details">
        <summary class="govuk-details__summary">
          <span class="govuk-details__summary-text">
            Help signing in
          </span>
        </summary>
        <div class="govuk-details__text">
          <p>
            Contact the Rural Payments Agency by email or phone if:
          </p>

          <ul class="govuk-list govuk-list--bullet">
            <li>You have forgotten your CRN</li>
            <li>you have lost your CRN</li>
            <li>your CRN is not recognised</li>
          </ul>

          <p class="govuk-body">
            Email:<br> 
            <a href="#">
              ruralpayments@defra.gov.uk</a>
          </p>

          <p class="govuk-body">Telephone:<br>03000 200 301
          </p>

          <p class="govuk-body">
            Service opening times:<br>
            Monday to Friday, 8:30am to 5pm, except bank holidays
          </p>

          <p class="govuk-body">
            <a href="#">Find out about call charges (opens in new tab)</a>
          </p>

          <p class="govuk-body">
            <a href="#">Register with the Rural Payments service</a> if you do not have an account.
          </p>

        </div>
      </details>

    </div>

  </div>

{% endblock %}
