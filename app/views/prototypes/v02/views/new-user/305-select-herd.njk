{% extends "layouts/main.html" %}

{% set claimType = data['claimType'] %}

{% block pageTitle %}
  Start page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block header %}
  <!-- Header for v1 -->
{{ govukHeader({
  homepageUrl: "holding-page",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "../index-research"
}) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="330-herd-check-your-details" method="post" novalidate>

      {% from "govuk/components/radios/macro.njk" import govukRadios %}

      {% if claimType == 'Animal health and welfare review' %}

      {{ govukRadios({
        name: "select-herd",
        fieldset: {
          legend: {
            text: "Select the herd you are claiming for",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        hint: {
          text: "You can also choose to claim for a different herd."
        },
        items: [
          {
            value: "Pedigree",
            text: "Pedigree"
          },
          {
            value: "Fattening herd",
            text: "Fattening herd"
          },
          {
            value: "Unnamed herd (Last claim: review visit on the 12 March 2025)",
            text: "Unnamed herd (Last claim: review visit on the 12 March 2025)"
          },          
          {
            divider: "or"
          },
          {
            value: "new herd",
            text: "I am claiming for a different herd"
          }
        ]
      }) }}

      {% endif %}

      {% if claimType == 'Endemic disease follow-up' %}

      {{ govukRadios({
        name: "select-herd",
        fieldset: {
          legend: {
            text: "Select the herd you are claiming for",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: [
          {
            value: "Pedigree",
            text: "Pedigree"
          },
          {
            value: "Fattening herd",
            text: "Fattening herd"
          },
          {
            value: "Unnamed herd (Last claim: review visit on the 12 March 2025)",
            text: "Unnamed herd (Last claim: review visit on the 12 March 2025)"
          }
        ]
      }) }}

      {% endif %}


        {{ govukButton({
          text: "Continue"
        }) }}

        <div>

        {# <details class="govuk-details">
          <summary class="govuk-details__summary">
            <span class="govuk-details__summary-text">
              I don't have the herd details from the vet
            </span>
          </summary>
          <div class="govuk-details__text">
            Your vet should have completed the  'Tell us about a herd or flock' section on the vet template. You can ask them to <a href="#">download the form</a> and fill the details in for you.
          </div>
        </details> #}

      </form>
    </div>
  </div>

{% endblock %}
