{% extends "layouts/main.html" %}

{% set claimType = data['claimType'] %}

{% block pageTitle %}
  Start page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block header %}
  <!-- Header for v1 -->
{{ govukHeader({
  homepageUrl: "holding-page",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "../index-research"
}) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form action="330-herd-check-your-details" method="post" novalidate>

      {% from "govuk/components/radios/macro.njk" import govukRadios %}

      {% if claimType == 'Animal health and welfare review' %}

      {{ govukRadios({
        name: "select-herd",
        fieldset: {
          legend: {
            text: "Select the herd you are claiming for",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        hint: {
          text: "If you want to claim for a different herd, you can add another herd."
        },
        items: [
          {
            value: "Pedigree",
            text: "Pedigree"
          },
          {
            value: "Fattening herd",
            text: "Fattening herd"
          },
          {
            value: "Unnamed herd (last claim: Review visit on the 12 March 2025)",
            text: "Unnamed herd (last claim: Review visit on the 12 March 2025)"
          },          
          {
            divider: "or"
          },
          {
            value: "new herd",
            text: "I am claiming for a new herd, which is not on this list"
          }
        ]
      }) }}

      {% endif %}

      {% if claimType == 'Endemic disease follow-up' %}

      {{ govukRadios({
        name: "select-herd",
        fieldset: {
          legend: {
            text: "Select the herd you are claiming for",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: [
          {
            value: "Pedigree",
            text: "Pedigree"
          },
          {
            value: "Fattening herd",
            text: "Fattening herd"
          },
          {
            value: "Unnamed herd (last claim: Review visit on the 12 March 2025)",
            text: "Unnamed herd (last claim: Review visit on the 12 March 2025)"
          }
        ]
      }) }}

      {% endif %}


        {{ govukButton({
          text: "Continue"
        }) }}

        <div>


      </form>
    </div>
  </div>

{% endblock %}
