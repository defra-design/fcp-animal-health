{% extends "layouts/main.html" %}

{% set herdReference = data['herd-reference'] or 'Pedigree Meadow' %}
{% set herdCPH = data['herd-cph'] or '52423212' %}
{% set otherHerdsCph = data['other-herds-cph'] or 'No' %}
{% set herdDetails = data['herd-details']  | join("<br><br>") or 'No information provided' %}
{% set herdMoreDetails = data['herd-more-details'] | replace("\n", "<br>") or 'No information provided' %}



{% block header %}
  <!-- Header for v1 -->
{{ govukHeader({
  homepageUrl: "holding-page",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "../index-research"
}) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">

      <h1 class="govuk-heading-xl">
        Check herd details
      </h1>

      {{ govukSummaryList({
        rows: [
          {
            key: {
              text: "Herd reference"
            },
            value: {
              text: herdReference
            },
            actions: {
                items: [
                  {
                    href: "310-herd-reference",
                    text: "Change",
                    visuallyHiddenText: "herd reference"
                  }
                ]
              }
            },

          {
            key: {
              text: "CPH number for herd"
            },
            value: {
              text: herdCPH
            },
            actions: {
                items: [
                  {
                    href: "315-herd-cph",
                    text: "Change",
                    visuallyHiddenText: "CPH number for herd"
                  }
                ]
              }
            },

          {
            key: {
              text: "Other herds on CPH"
            },
            value: {
              text: otherHerdsCph
            },
          actions: {
            items: [
              {
                href: "315-herd-cph",
                text: "Change",
                visuallyHiddenText: "other herds on CPH"
                  }
                ]
              }
            },
           
            {
              key: {
                text: "Herd details"
              },
              value: {
                "html": herdDetails
              },
              actions: {
                items: [
                  {
                    href: "320-herd-details",
                    text: "Change",
                    visuallyHiddenText: "herd details"
                  }
                ]
              }
            },

            {
              key: {
                text: "Tell us why"
              },
              value: {
                "html": herdMoreDetails
              },
              actions: {
                items: [
                  {
                    href: "350-sample-date",
                    text: "Change",
                    visuallyHiddenText: "Herd"
                  }
                ]
              }
            }

        ]
      }) }}

      {# <hr class="govuk-section-break govuk-section-break--m govuk-section-break">

      <p class="govuk-body">By submitting your claim you confirm that:</p>
      <ul class="govuk-list govuk-list--bullet">
        <li>you understand you may have to provide evidence to the Rural Payments Agency to support this claim</li>
        <li>all the information you have provided in this claim is correct to the best of your knowledge</li>
      </ul> #}

      <hr class="govuk-section-break govuk-section-break--m govuk-section-break">

        {{ govukButton({
        text: "Continue",
        href: "350-sample-date",
        isStartButton: false
        }) }}

    </div>
  </div>
{% endblock %}
