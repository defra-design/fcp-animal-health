{% extends "layouts/main.html" %}

{% block pageTitle %}
  Start page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block header %}
  <!-- Blank header with no service name for the start page -->
{{ govukHeader({
  homepageUrl: "#",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "#"
}) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% from "govuk/components/radios/macro.njk" import govukRadios %}

      {{ govukRadios({
        name: "claimType",
        fieldset: {
          legend: {
            text: "Are you claiming for a review or follow-up?",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: [
          {
            value: "review",
            text: "Animal health and welfare review"
          },
          {
            value: "followup",
            text: "Endemic disease follow-up"
          }
        ]
      }) }}

            {{ govukButton({
        text: "Continue",
        href: "review-date",
        isStartButton: false
      }) }}


    </div>

  </div>

{% endblock %}
