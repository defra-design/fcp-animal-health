{% extends "layouts/main.html" %}

{% block pageTitle %}
  Start page template – {{ serviceName }} – GOV.UK Prototype Kit
{% endblock %}

{% block header %}
  <!-- Blank header with no service name for the start page -->
{{ govukHeader({
  homepageUrl: "#",
  serviceName: "Get funding to improve animal health and welfare",
  serviceUrl: "#"
}) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: "javascript:window.history.back()"
  }) }}
{% endblock %}

{% block content %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

      {% from "govuk/components/radios/macro.njk" import govukRadios %}

      {{ govukRadios({
        name: "typeofclaim",
        fieldset: {
          legend: {
            text: "What are you claiming for",
            isPageHeading: true,
            classes: "govuk-fieldset__legend--l"
          }
        },
        items: [
          {
            value: "review",
            text: "I'm claiming a follow-up for my beef review of 4 July 2024"
          },
          {
            value: "followup",
            text: "I'm claiming a new review (select species on next screen)"
          },
                    {
            value: "followup",
            text: "I'm claiming another follow-up (select species on next screen)"
          }
        ]
      }) }}

            {{ govukButton({
        text: "Continue",
        href: "review-date",
        isStartButton: false
      }) }}


    </div>

  </div>

{% endblock %}
